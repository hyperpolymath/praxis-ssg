{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "doit-ssg",
  "version": "0.2.0",
  "tasks": {
    "test": "deno test tests/ --allow-read",
    "test:coverage": "deno test --coverage=coverage tests/ --allow-read",
    "lint": "deno lint adapters/",
    "fmt": "deno fmt adapters/",
    "fmt:check": "deno fmt --check adapters/",
    "check": "deno check adapters/*.js"
  },
  "lint": {
    "include": ["adapters/", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "no-await-in-loop",
        "no-const-assign",
        "no-eval",
        "no-throw-literal",
        "prefer-const"
      ]
    }
  },
  "fmt": {
    "include": ["adapters/", "tests/"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  }
}
